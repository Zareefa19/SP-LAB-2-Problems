#include <stdio.h>
int main()
{
    float g1, ch1, g2, ch2, cgpa;
    printf("Grade in course-1: ");
    scanf("%f", &g1);
    printf("Credit hour of course-1: ");
    scanf("%f", &ch1);
    printf("Grade in course-2: ");
    scanf("%f", &g2);
    printf("Credit hour of course-2: ");
    scanf("%f", &ch2);
    cgpa = ((g1*ch1)+(g2*ch2))/(ch1+ch2);
    printf("CGPA = %.2f\n", cgpa);
    return 0;

}







#include <stdio.h>
int main()
{
    int id, wh, sph;
    float salary;
    printf("Input the Employees ID: ");
    scanf("%d", &id);
    printf("Input the working hrs: ");
    scanf("%d", &wh);
    printf("Salary amount/hr: ");
    scanf("%d", &sph);
    printf("Employees ID = %d\n", id);
    salary = sph*wh;
    printf("Salary = %.2f\n", salary);
    return 0;
}






#include <stdio.h>
int main()

{
    int dist;
    float fuel, average;
    printf("Input total distance in km: ");
    scanf("%d", &dist);
    printf("Input total fuel spent in litres: ");
    scanf("%f", &fuel);
    average = dist/fuel;
    printf("Average consumption (km/lt) %.3f\n", average);
    return 0;
}







#include <stdio.h>
int main()
{
    int x1, y1, x2, y2, dis;
    printf("Input x1: ");
    scanf("%d", &x1);
    printf("Input y1: ");
    scanf("%d", &y1);
    printf("Input x2: ");
    scanf("%d", &x2);
    printf("Input y2: ");
    scanf("%d", &y2);
    dis = ((x1-x2)²+(y1-y2)²)½;
    printf("Distance between the said points: %d\n", dis);
    return 0;
}







